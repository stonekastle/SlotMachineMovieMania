@model TestDirecTV.Models.SlotsViewModel
@{
    ViewBag.Title = "Index2";
}

<link type="text/css" rel="stylesheet" href="~/css/slots.css" />
<link type="text/css" rel="stylesheet" href="~/css/template2.css" />
<style>
    .disabledbutton {
        pointer-events: none;
        opacity: 0.4;
    }

    body {
        /*background-image: url("/Images/FamilyMan.png");*/
        background-image: url("/Images/template2/main_bg.gif");
        background-repeat: no-repeat;
        background-position: center top; /*deleted "center top" so that the background is now centered in the middle of the image and screen rather than from very top of the image*/
        background-size: cover;
    }

    html, body {
        max-width: 100%;
        max-height: 500%;
        overflow-x: hidden;
    }


    #headerStretch {
        max-height: 2000px;
        max-width: 750px;
    }

    #userImage {
        border-radius: 5%;
        box-shadow: 8px 8px 60px black /*#00a6d6*/;
    }

    .jackpot {
        max-height: 1000px;
        max-width: 2000px;
        /*display:none;*/
    }

    #slotPotWinner {
        display: none;
    }
</style>



<div class="container-fluid">

