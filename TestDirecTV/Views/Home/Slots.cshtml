                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />


            </div>
        </div>
    </div>

    @*----------------------------------------------------------------------------------------------------------*@


    @*-------------------this is only to push slot machine container away from edge-----------------------------*@

    <div class="col-sm-2">
    </div>

    @*------------------------------------------FOOTER----------------------------------------------------------*@

    <div class="col-sm-12 clearBackground">
        <br />
        <center><img type="image" src="~/Images/spin-to-win-slot-machine-junior.png" /></center>
    </div>
    @*----------------------------------------------------------------------------------------------------------*@
</div>





